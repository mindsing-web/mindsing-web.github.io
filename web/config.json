{
  "baseURL": "/",
  "languageCode": "en-us",
  "title": "MindSing",
  "theme": "ananke",
  "contentDir": "content",
  "DefaultContentLanguage": "en",
  "SectionPagesMenu": "main",
  "pagination": { "pagerSize": 6 },
  "enableRobotsTXT": true,
  "taxonomies": {
    "category": "categories",
    "tag": "tags"
  },
  "permalinks": {
    "blog": "/blog/:sections[1:]/:slug/"
  },
  "frontmatter": {
    "date": [":filename", ":default"]
  },
  "markup": {
    "goldmark": {
      "renderer": {
        "unsafe": true
      }
    }
  },
  "module": {
    "mounts": [
      {
        "source": "assets",
        "target": "assets"
      }
    ]
  },
  "params": {
    "site_logo": "/images/mindsing-logo.svg",
    "custom_css": ["css/app.css"],
    "description": "Specialized Drupal & WordPress development for enterprise, higher education, and global-scale web systems."
  },
  "languages": {
    "en": {
      "title": "MindSing",
      "weight": 1,
      "contentDir": "content/en"
    }
  }
}
